{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vcpkg-x64-windows-release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\make.bat"
            },
            "options": {
                "env": {
                    "BUILD_TYPE": "Release",
                    "ARCH": "x64",
                    "TARGET_OS": "windows",
                    "TOOLCHAIN": "${env:VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "vcpkg-x64-windows-debug",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\make.bat"
            },
            "options": {
                "env": {
                    "BUILD_TYPE": "Debug",
                    "ARCH": "x64",
                    "TARGET_OS": "windows",
                    "TOOLCHAIN": "${env:VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}